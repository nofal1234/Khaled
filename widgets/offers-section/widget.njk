<!-- Offers Section -->
<section class="mt-2 md:mt-4 mb-7 px-2 mx-2.5 md:mx-20">
    <div class="py-4 md:py-8 px-2 md:px-6 rounded-2xl">
        <div class="flex items-center justify-between mb-6 md:mb-6">
            <h1 class="text-xl md:text-2xl font-bold text-dark">{{ t(widget.data.section_title or 'offers') }}</h1>
            <div class="flex items-center gap-2" dir="ltr">
                <div class="swiper-button-prev-offers cursor-pointer hover:opacity-70 transition hidden md:flex items-center justify-center bg-transparent">
                    <i class="ph ph-caret-left text-black text-lg"></i>
                </div>
                <div class="swiper-button-next-offers cursor-pointer hover:opacity-70 transition hidden md:flex items-center justify-center bg-transparent">
                    <i class="ph ph-caret-right text-black text-lg"></i>
                </div>
                <a href="{{ widget.data.view_all_link | default('#') }}" class="underline text-xs md:text-sm text-black cursor-pointer hover:text-mainColor transition">{{t('view_all')}}</a>
            </div>
        </div>

        <!-- Products Swiper -->
        <div class="relative -mx-2 md:mx-0">
            <div class="swiper productsSwiper">
                <div class="swiper-wrapper">
                {% set products = (widget.data.products_collection and widget.data.products_collection.products) or widget.data.products_collection or [] %}
                {% for product in products %}
                    <div class="swiper-slide mb-5 px-0 md:px-0">
                        {%ui "product-card.njk" ,product=product %}
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const swiperOptions = {
        slidesPerView: 2,
        spaceBetween: 4,
        loop: true,
        grabCursor: true,
        centeredSlides: false,
        navigation: { nextEl: '.swiper-button-next-offers', prevEl: '.swiper-button-prev-offers' },
        autoplay: { delay: 4000, disableOnInteraction: false, pauseOnMouseEnter: true },
        initialSlide: 0,
        breakpoints: {
            320: { slidesPerView: 2, spaceBetween: 4, centeredSlides: false },
            390: { slidesPerView: 2, spaceBetween: 4, centeredSlides: false },
            480: { slidesPerView: 2, spaceBetween: 4, centeredSlides: false },
            640: { slidesPerView: 2, spaceBetween: 4, centeredSlides: false },
            768: { slidesPerView: 2.5, spaceBetween: 16, centeredSlides: false },
            1024: { slidesPerView: 3, spaceBetween: 20, centeredSlides: false },
            1280: { slidesPerView: 4, spaceBetween: 20, centeredSlides: false },
        }
    };

    const productsSwiper = new Swiper('.productsSwiper', swiperOptions);
});
</script> 
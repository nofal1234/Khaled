<section class="py-4 md:py-6 bg-white pt-32 md:pt-36 lg:pt-40">
  <div class="container mx-auto px-2.5 sm:px-6 md:px-8 lg:px-12">
    <!-- Page Title -->
    <div class="mb-4 md:mb-6">
      <h1 class="text-xl md:text-2xl lg:text-3xl font-bold text-black text-right">
        عربتك
      </h1>
    </div>
    
    <!-- Cart Section -->
    <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
      <!-- Right Side: Cart Items -->
      <div class="w-full lg:w-2/3">
        <!-- Cart Items Table -->
        <div class="overflow-x-auto">
          <table class="w-full rounded-lg overflow-hidden min-w-[600px]">
            <thead>
              <tr class="border-b border-gray-300">
                <th class="text-right py-3 px-4 text-lg text-black">المنتج</th>
                <th class="text-center py-3 px-4 text-lg text-black">السعر</th>
                <th class="text-center py-3 px-4 text-lg text-black">الكمية</th>
                <th class="text-center py-3 px-4 text-lg text-black">المجموع الكلي</th>
              </tr>
            </thead>
            <tbody>
              {% set cartItems = widget.data.cart_items or [] %}
              {% if cartItems | length > 0 %}
              {% for item in cartItems %}
              <tr>
                <td class="py-4 px-4 text-right">
                  <div class="flex items-center gap-3">
                    <img src="{{ item.image }}" alt="{{ item.title }}" class="w-16 h-16 object-cover rounded-lg" />
                    <div>
                      <p class="text-xl font-medium w-4/5 text-black">{{ item.title }}</p>
                      <p class="text-xl pt-4 text-gray-500">{{ item.size }}</p>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4 text-center">
                  <span class="text-xl font-bold text-black">€{{ item.price }}</span>
                </td>
                <td class="py-4 px-4 text-center">
                  <input
                    type="number"
                    value="{{ item.quantity }}"
                    min="1"
                    class="w-[5rem] h-[2.5rem] bg-white text-center border border-black rounded-full focus:outline-none focus:ring-2 focus:ring-mainColor"
                  />
                </td>
                <td class="py-4 px-4 text-center">
                  <span class="text-xl font-bold text-black">€{{ (item.price * item.quantity) | round(2) }}</span>
                </td>
              </tr>
              {% endfor %}
              {% else %}
              <tr>
                <td colspan="4" class="py-8 text-center text-gray-500">
                  <div class="flex flex-col items-center gap-4">
                    <i class="ph ph-shopping-cart text-4xl text-gray-300"></i>
                    <p class="text-lg">سلة المشتريات فارغة</p>
                    <a href="/collections" class="bg-mainColor text-white px-6 py-2 rounded-lg hover:bg-gray-800 transition">
                      متابعة التسوق
                    </a>
                  </div>
                </td>
              </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Left Side: Order Summary -->
      <div class="w-full lg:w-1/3">
        <div class="bg-[#F7F7F7] rounded-2xl p-6 sticky top-6">
          <!-- Shipping Note -->
          <div class="flex items-center py-5 gap-2 text-md text-gray-500">
            <i class="ph ph-package text-gray-600 flex-shrink-0"></i>
            <p>انفق 345.10 يورو إضافية للحصول على شحن مجاني</p>
          </div>

          <!-- Total Price -->
          {% if cartItems | length > 0 %}
          {% set totalPrice = cartItems | sum(attribute='price') * cartItems | sum(attribute='quantity') %}
          <div class="flex items-center justify-between">
            <span class="text-xl font-bold text-black">المجموع الفرعي</span>
            <span class="text-2xl font-bold text-black">€{{ totalPrice | round(2) }}</span>
          </div>
          {% else %}
          <div class="flex items-center justify-between">
            <span class="text-xl font-bold text-black">المجموع الفرعي</span>
            <span class="text-2xl font-bold text-black">€0.00</span>
          </div>
          {% endif %}
          <!-- Price Details -->
          <div class="space-y-4 py-[20px]">
            <div class="flex items-center justify-between text-md">
              <span class="text-gray-600">شامل الضرائب. الشحن يحتسب عند الدفع.</span>
            </div>
          </div>

          <!-- Notes Section -->
          <div class="mb-6">
            <label for="orderNotes" class="block text-sm font-medium text-gray-700 mb-2">ملاحظات</label>
            <textarea
              id="orderNotes"
              rows="4"
              placeholder="أضف ملاحظة للطلب..."
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-mainColor focus:border-transparent resize-none text-sm"
            ></textarea>
          </div>

          <!-- Shipping Agreement -->
          <div class="flex items-start gap-2 mb-6">
            <input
              type="checkbox"
              id="terms"
              class="mt-1 w-4 h-4 text-mainColor border-gray-300 rounded focus:ring-mainColor"
            />
            <label for="terms" class="text-lg text-black leading-relaxed">
              الموافقة على شروط البيع ووفقاً لشروط خدمة التجار
            </label>
          </div>

          <!-- Checkout Button -->
          <button
            class="w-full bg-black text-white font-bold py-4 rounded-full transition hover:bg-gray-800 disabled:opacity-50 disabled:cursor-not-allowed"
            {% if cartItems | length == 0 %}disabled{% endif %}
          >
            الدفع الان
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
  
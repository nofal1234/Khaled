{
  "name": "Cart",
  "description": "Display cart contents with order summary",
  "settings": {
    "cart_title": {
      "type": "string",
      "label": "Cart Title",
      "default": "cart_title"
    },
    "cart_product": {
      "type": "string",
      "label": "Product Column Header",
      "default": "cart_product"
    },
    "cart_price": {
      "type": "string",
      "label": "Price Column Header",
      "default": "cart_price"
    },
    "cart_quantity": {
      "type": "string",
      "label": "Quantity Column Header",
      "default": "cart_quantity"
    },
    "cart_total": {
      "type": "string",
      "label": "Total Column Header",
      "default": "cart_total"
    },
    "cart_remove": {
      "type": "string",
      "label": "Remove Button Text",
      "default": "cart_remove"
    },
    "cart_empty": {
      "type": "string",

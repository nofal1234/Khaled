<section class="product-listing bg-white">
  <div class="px-2.5 md:px-6 mx-2.5 md:mx-20 pt-6 md:pt-8 pb-10">
  <!-- Breadcrumb & Filters (from Category.html simplified) -->
  <section class="bg-white py-0 md:py-1">
    <div class="md:block">
      <div class="px-0 md:px-0 py-0 mb-3 md:mb-4">
        <nav class="flex items-center gap-2 text-sm md:text-base text-black-600">
          <a href="#" class="hover:text-mainColor transition">{{t('home')}}</a>
          <span>/</span>
          <span class="text-mainColor font-semibold">{{ t(widget.data.section_title or 'view_sections') }}</span>
        </nav>
      </div>
      
    </div>
  </section>

  <!-- Title -->
  <div class="px-0 md:px-0 mb-4 md:mb-8 mt-2 md:mt-3 flex items-center justify-between gap-2 md:gap-3">
    <h1 class="text-lg md:text-3xl font-bold mb-1 md:mb-2">{{ t(widget.data.section_title or 'view_sections') }}</h1>
    <div class="w-auto ml-2 md:ml-6">
      <div class="relative w-[120px] h-[32px] md:w-[176px] md:h-[42px]">
        <select
          class="w-full h-full appearance-none border border-gray-300 rounded-[4px] focus:outline-none focus:ring-2 focus:ring-mainColor text-xs md:text-base text-right pr-6 md:pr-8 pl-5 md:pl-6"
        >
          <option>{{t('sort')}}</option>
          <option>{{t('price')}}: {{t('from')}} {{t('lowest')}} {{t('to')}} {{t('highest')}}</option>
          <option>{{t('price')}}: {{t('from')}} {{t('highest')}} {{t('to')}} {{t('lowest')}}</option>
          <option>{{t('highest_rated')}}</option>
        </select>
        <!-- السهم المخصص -->
        <span class="absolute left-2 md:left-3 top-1/2 -translate-y-1/2 pointer-events-none">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-3 h-3 md:w-4 md:h-4 text-black"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </span>
      </div>
    </div>
  </div>

  <!-- Grid -->
  <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
    {% set items = (context.collections and context.collections) or (widget.data.collections and widget.data.collections) or [] %}
    {% if widget.blocks and (widget.blocks | length) > 0 %}
      {% for block in widget.blocks %}
        <div class="product-card bg-white rounded-2xl border-2 border-gray overflow-hidden flex flex-col min-h-[260px]">
          <div class="relative overflow-hidden bg-gray-100 h-40 md:h-48 flex items-center justify-center">
            {% if block.settings.image %}
              {% if block.settings.image.fileUrl %}
                <img src="{{ block.settings.image.fileUrl }}" alt="{{ block.settings.alt_text | default(block.settings.name) }}" class="w-full h-full object-cover" />
              {% else %}
                <img src="{{ block.settings.image | assets }}" alt="{{ block.settings.alt_text | default(block.settings.name) }}" class="w-full h-full object-cover" />
              {% endif %}
            {% else %}
            <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-32 flex items-center justify-center md:h-40">
              <span class="text-gray-500 text-sm">{{t('no_image')}}</span>
            </div>
            {% endif %}
          </div>

          <div class="p-3 md:p-4 flex flex-col flex-1 items-center gap-2">
            <h3 class="text-base md:text-lg font-bold text-dark mb-2 text-center">{{ t(block.settings.name or 'collection_name') }}</h3>
            <a href="{{ block.settings.link | default('#') }}" class="mt-auto category-cta relative z-10 opacity-100 w-full h-[40px] bg-black text-white rounded-[10px] font-bold hover:bg-gray-800 transition flex items-center justify-center">
              {{t('browse_now')}}
            </a>
          </div>  
        </div>
      {% endfor %}
    {% else %}
      {% for c in items %}
        <div class="product-card bg-white rounded-2xl border-2 border-gray overflow-hidden flex flex-col min-h-[260px]">
          <div class="relative overflow-hidden bg-gray-100 h-40 md:h-48 flex items-center justify-center">
            {% if c.image and c.image.fileUrl %}
            <img src="{{ c.image.fileUrl }}" alt="{{ t('collection_image') }}" class="w-full h-full object-cover" />
            {% else %}
            <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-32 flex items-center justify-center md:h-40">
                <span class="text-gray-500 text-sm">{{ t('no_collection_image') }}</span>
            </div>
            {% endif %}
          </div>

          <div class="p-3 md:p-4 flex flex-col flex-1 items-center gap-2">
            <h3 class="text-base md:text-lg font-bold text-dark mb-2 text-center">{{ c.title }}</h3>
            <p class="text-xs md:text-sm text-gray-600 mb-3 md:mb-4 text-center line-clamp-2">{{ c.description or '' }}</p>
            <a href="/collection/{{ c.slug }}" class="mt-auto category-cta relative z-10 opacity-100 w-full h-[40px] bg-black text-white rounded-[10px] font-bold hover:bg-gray-800 transition flex items-center justify-center">
              {{t('browse_now')}}
            </a>
          </div>  
        </div>
      {% endfor %}
    {% endif %}
  </div>

  <!-- Pagination -->
  {% set current = (context.pagination and context.pagination.currentPage) or 1 %}
  {% set total = (context.pagination and context.pagination.totalPages) or 10 %}
  <div class="flex items-center justify-center mt-6">
    <nav class="flex items-center gap-3">
      {# Prev #}
      {% if current > 1 %}
      <a href="?page={{ current - 1 }}" class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-300 hover:bg-gray-50">
        <span class="text-gray-700">‹</span>
      </a>
      {% else %}
      <span class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-200 text-gray-400 cursor-not-allowed">‹</span>
      {% endif %}

      {# Page 1..3 #}
      {% for p in [1,2,3] %}
        {% if p <= total %}
          {% if p == current %}
          <span class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full bg-black text-white">{{ p }}</span>
          {% else %}
          <a href="?page={{ p }}" class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-300 hover:bg-gray-50">{{ p }}</a>
          {% endif %}
        {% endif %}
      {% endfor %}

      {# Ellipsis and last page #}
      {% if total > 4 %}
        <span class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-200 text-gray-500">…</span>
        <a href="?page={{ total }}" class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-300 hover:bg-gray-50">{{ total }}</a>
      {% elseif total == 4 %}
        {% if 4 == current %}
        <span class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full bg-black text-white">4</span>
        {% else %}
        <a href="?page=4" class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-300 hover:bg-gray-50">4</a>
        {% endif %}
      {% endif %}

      {# Next #}
      {% if current < total %}
      <a href="?page={{ current + 1 }}" class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-300 hover:bg-gray-50">
        <span class="text-gray-700">›</span>
      </a>
      {% else %}
      <span class="h-8 w-8 md:h-9 md:w-9 flex items-center justify-center rounded-full border border-gray-200 text-gray-400 cursor-not-allowed">›</span>
      {% endif %}
    </nav>
  </div>
</section>
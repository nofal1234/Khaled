   {% if items | length > 0  %}

  {% set cols_mobile = widget.data.cards_per_row_mobile or 2 %}
  {% set cols_tablet = widget.data.cards_per_row_tablet or 3 %}
  {% set cols_desktop = widget.data.cards_per_row_desktop or 4 %}

  <div class="grid gap-4 md:gap-6
      grid-cols-{{ cols_mobile }}
      sm:grid-cols-{{ cols_mobile }}
      md:grid-cols-{{ cols_tablet }}
      lg:grid-cols-{{ cols_desktop }}">
    {% if widget.blocks and (widget.blocks | length) > 0 %}
      {% for block in widget.blocks %}
        {% ui "collection-card.njk", collection=block.data %}
      {% endfor %}
    {% else %}
      {% log "image_rcccacdius", widget.data.is_image_radius %}
      {% for item in items %}
        {% ui "collection-card.njk", collection=item %}

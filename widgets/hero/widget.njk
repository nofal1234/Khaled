<!-- Hero Section - Full Background from Top -->

<section class="relative min-h-screen flex items-center justify-center">
    <!-- Background Image -->
    {% if widget.data.image and widget.data.image.fileUrl %}
        <img src="{{ widget.data.image.fileUrl }}" class="absolute inset-0 w-full h-full object-cover">
    {% else %}
        <img src="{{ 'Hero.png' | assets }}" alt="صورة الهيرو الافتراضية" class="absolute inset-0 w-full h-full object-cover">
    {% endif %}
    
    <!-- Overlay for better text readability -->
    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
    
    <!-- Content positioned below header -->
    <div class="relative w-full md:w-1/2 z-10 text-center px-4 mt-40 md:mt-32">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-4 md:mb-6 drop-shadow-lg">
            {{ widget.data.title | default('تحويل الأحلام إلى واقع') }}
        </h1>
        <div class="text-lg md:text-2xl lg:text-3xl text-white mb-6 md:mb-8 drop-shadow-md max-w-2xl mx-auto">
            {{ widget.data.subtitle | default('نجمع بين الإبداع والحرفية، لنوفر لكم قطع ملابس مصممة بدقة متناهية') }}
        </div>
        {% if widget.data.show_button != false %}
        <a href="{{ widget.data.button_link | default('/collections') }}" class="bg-transparent border-2 border-white text-white font-bold py-2 md:py-3 px-6 md:px-8 rounded-full transition transform hover:bg-white hover:text-mainColor shadow-lg inline-block">
            {{ widget.data.button_text | default('اطلب الان') }}
        </a>
        {% endif %}
    </div>
</section>
  
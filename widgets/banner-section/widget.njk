<!-- Banner Section (same visual design; hero-like behavior) -->
<section class="my-12 md:my-16 px-0 md:px-6 mx-0 md:mx-20 rounded-xl">
  <div class="relative w-full rounded-none md:rounded-xl" style="height: 362px; width: 100%;">
    {% if widget.data.image and widget.data.image.fileUrl %}
      <img src="{{ widget.data.image.fileUrl }}" alt="{{ t(widget.data.alt or 'banner_image_alt') }}" class="w-full h-full rounded-none md:rounded-xl" style="object-fit: cover; object-position: center top;" />
    {% else %}
      <img src="{{ 'banner.png' | assets }}" alt="{{ t('banner_image_alt') }}" class="w-full h-full rounded-none md:rounded-xl" style="object-fit: cover; object-position: center top;" />
    {% endif %}

    <div class="absolute inset-0 flex items-center">

      <div
        class="py-10 md:py-16 px-4 md:px-6 rounded-2xl container flex flex-col items-center md:items-start text-center md:text-right w-full md:w-1/2"
      >
        {% set defaultTitleAr = 'قد حلّ فصل الربيع. اكتشفوا المنتجات الجديدة' %}
        {% set defaultSubtitleAr = 'غيّر مظهرك هذا الموسم' %}
        {% set defaultButtonAr = 'اطلب الآن' %}

        {# Title key logic like hero: ignore built-in Arabic defaults (even if they come with extra spaces) #}
        {% set rawTitle = widget.data.title or '' %}
        {% set titleValue = rawTitle | striptags | trim %}
        {% if not titleValue or titleValue == defaultTitleAr %}
          {% set bannerTitleKey = 'spring_has_arrived' %}
        {% else %}
          {% set bannerTitleKey = rawTitle %}
        {% endif %}

        {% set rawSubtitle = widget.data.subtitle or '' %}
        {% set subtitleValue = rawSubtitle | striptags | trim %}
        {% if not subtitleValue or subtitleValue == defaultSubtitleAr %}
          {% set bannerSubtitleKey = 'change_your_look' %}
        {% else %}
          {% set bannerSubtitleKey = rawSubtitle %}
        {% endif %}

        {% set rawButton = widget.data.button_text or '' %}
        {% set buttonValue = rawButton | striptags | trim %}
        {% if not buttonValue or buttonValue == defaultButtonAr %}
          {% set bannerButtonKey = 'order_now' %}
        {% else %}
          {% set bannerButtonKey = rawButton %}
        {% endif %}

        <h1 class="text-2xl md:text-4xl font-bold text-white mb-6">
          {{ t(bannerTitleKey) }}
        </h1>
        <div class="text-white pb-10">
          {{ t(bannerSubtitleKey) | striptags }}
        </div>

        <div>
          <a href="{{ widget.data.button_link | default('/collections') }}" class="inline-block">
            <button
              class="border-2 border-white text-white font-bold py-3 px-6 rounded-full hover:bg-gray-800 transition"
            >
              {{ t(bannerButtonKey) }}
            </button>

          </a>
        </div>
      </div>
    </div>
  </div>
</section>
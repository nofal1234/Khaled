<!-- Banner Section (same visual design; schema-bound content only) -->
<section class="my-12 md:my-16 px-0 md:px-6 mx-0 md:mx-20 rounded-xl">
  <div class="relative w-full rounded-none md:rounded-xl" style="height: 362px; width: 100%;">
    {% if widget.data.image and widget.data.image.fileUrl %}
      <img src="{{ widget.data.image.fileUrl }}" alt="{{ widget.data.alt | default('صورة البانر') }}" class="w-full h-full rounded-none md:rounded-xl" style="object-fit: cover; object-position: center top;" />
    {% else %}
      <img src="{{ 'banner.png' | assets }}" alt="صورة افتراضية" class="w-full h-full rounded-none md:rounded-xl" style="object-fit: cover; object-position: center top;" />
    {% endif %}
    <div class="absolute inset-0 flex items-center">
      <div
        class="py-10 md:py-16 px-4 md:px-6 rounded-2xl container flex flex-col items-center md:items-start text-center md:text-right w-full md:w-1/2"
      >
        <h1 class="text-2xl md:text-4xl font-bold text-white mb-6">
          {{ widget.data.title | default('قد حلّ فصل الربيع. اكتشفوا المنتجات الجديدة') }}
        </h1>
        <p class="text-white pb-10">{{ widget.data.subtitle | default('غيّر مظهرك هذا الموسم') }}</p>
        <div>
          <a href="{{ widget.data.button_link | default('/collections') }}" class="inline-block">
            <button
              class="border-2 border-white text-white font-bold py-3 px-6 rounded-full hover:bg-gray-800 transition"
            >
              {{ widget.data.button_text | default('اطلب الآن') }}
            </button>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
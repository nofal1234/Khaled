<!-- Reviews Section -->
<section class="py-6 bg-white">
  <div class="px-2.5 md:px-6 mx-2.5 md:mx-20 py-6 bg-white rounded-2xl">
    <h1 class="text-2xl md:text-3xl font-bold text-black mb-6">
      {{ t('reviews_and_ratings') }}
    </h1>
    <div class="flex flex-col lg:flex-row md:gap-[126px] gap-4 items-start">
      <!-- Left Side - Rating Summary -->
      <div class="w-full lg:w-1/2">
        <div class="flex flex-col w-full md:flex-row md:gap-8 gap-4 items-center">
          <div class="max-md:text-center flex flex-col gap-2">
            <div class="flex items-center justify-center gap-2">
              <p class="text-textDescription self-end text-[18.29px] md:text-[32px]">5/</p>
              <h2 class="text-[98.29px] md:text-[172px] font-medium text-mainColor leading-[100%]">
                {{ widget.data.rating | default(4.5) }}
              </h2>
            </div>
            <p class="text-textDescription text-xs md:text-lg">
              ( {{ widget.data.totalReviews | default(30) }} {{t('new_review')}} )
            </p>
          </div>
          <div class=" w-full flex flex-col gap-5">
            {% for item in widget.blocks%}
            {% if item.blockKey=="starsRating" %}
            <div class="flex items-center gap-2">
              <i class="ph-fill ph-star text-yellow-500 text-xs md:text-sm"></i>
              <div class="flex-1 h-2 bg-gray-200 rounded-full overflow-hidden">
                {% set percent = ((item.data.stars or item.settings.stars or 0) / 5 * 100) %}
                <div class="h-full bg-yellow-500 rounded-full" style="width:{{ percent }}%"></div>
              </div>
            </div>
            {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
      <!-- Right Side - Reviews List -->
      <div class="w-full lg:w-1/2 border border-gray-200 px-8 py-4 md:px-8 md:py-[35.25px] rounded-xl flex flex-col gap-4">
          {% for block in widget.blocks %}
            {% if block.blockKey == "reviewItem" %}
            <h2 class="text-base md:text-lg font-bold text-dark">
                {{ t((block.data.name | default(block.settings.name)) | striptags) }}
              </h2>
              <div class="flex items-center gap-2">
                {% set stars = block.data.stars | default(block.settings.stars) | default(5) %}
                {% for i in range(1, 6) %}
                  {% if i <= stars %}
                    <i class="ph-fill ph-star text-yellow-500 text-xs md:text-sm"></i>
                  {% else %}
                    <i class="ph-fill ph-star text-yellow-300 text-xs md:text-sm"></i>
                  {% endif %}
                {% endfor %}
              </div>
            <!-- Review Images -->
            <div class="flex gap-1.5 overflow-x-auto">
                  <img src="{{ block.data.image.fileUrl }}" class="w-[71.53px] h-[71.53px] md:w-[114px] md:h-[114px] rounded-lg object-cover border border-gray-200 flex-shrink-0" alt="review image">
            </div>

            <p class="text-xs md:text-sm text-gray-600 leading-relaxed">
              {{ t((block.data.review | default(block.settings.review)) | striptags) }}
            </p>
              
            {% endif %}
          {% endfor %}
      </div>
    </div>
  </div>
</section>
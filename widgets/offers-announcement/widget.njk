{% if widget.data.show_top_bar | default(true) %}
{% set top_bar_is_fixed = context.page.isMain == false %}
{% set bg_color = widget.data.bg_color %}
{% set text_color = widget.data.text_color %}
{% set height = widget.data.height %}
{% set font_size = widget.data.font_size %}
{% set show_language = widget.data.show_language %}
{% if top_bar_is_fixed %}
<div style="height: {{height}}px" class="h-10 md:min-h-[49px]"></div>
{% endif %}
<!-- Top Bar -->
<div 
  style="background-color: {{bg_color}}; color: {{text_color}}; font-size: {{font_size}}px;  height: {{height}}px;"
  class="w-full z-40 flex items-center {% if top_bar_is_fixed %}fixed top-0 left-0 right-0{% endif %}">
  <div class="relative  w-full px-2.5 md:px-12 mx-2.5 md:mx-20 flex items-center justify-center">
    {% set markets_list = markets or data.markets or [] %}

    {# {% ui "market-menu.njk" ,markets=markets_list %} #}

    <div class="flex items-center gap-4 lg:gap-10 mx-auto md:mx-0" dir="ltr">
      <button class="transition" onclick="previousBrand()">
        <i style="font-size: {{font_size}}px;" class="ph ph-caret-left text-sm md:text-base px-2 md:px-6"></i>
      </button>
      <span style="font-size: {{font_size}}px;" class="text-sm md:text-xl" style="direction: ltr">{{ t(widget.data.brands_text or 'brands_counter') }}</span>
      <button class="transition" onclick="nextBrand()">
        <i style="font-size: {{font_size}}px;" class="ph ph-caret-right text-sm md:text-base px-2 md:px-6"></i>
      </button>
    </div>
    {% if show_language %}
    <div class="absolute right-2 md:right-6 top-1/2 -translate-y-1/2">
      {% ui "lang-form.njk"%}
    </div>
    {% endif %}
  </div>
</div>
{% endif %}
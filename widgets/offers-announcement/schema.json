{
  "name": "top bar",
  "description": "الشريط العلوي البسيط الذي يظهر أعلى الهيدر",
  "settings": {
    "font_size": {
      "type": "number",
      "label": "حجم الخط",
      "default": "18",
      "description": "حجم الخط المستخدم في الشريط العلوي (px) "
    },
    "height": {
      "type": "number",
      "label": "الارتفاع",
      "default": "48",
      "description":"الارتفاع داخل الشريط (px) "
    },
    "bg_color": {
      "type": "color",
      "label": "لون الخلفية",
      "default": "#00000",
      "description": "لون الخلفية المستخدم في الشريط العلوي"
    },
    "text_color": {
      "type": "color",
      "label": "لون النص",
      "default": "#fff",
      "description": "لون النص المستخدم في الشريط العلوي"
    },
    "show_language": {
      "type": "boolean",
      "label": "مبدل اللغة",
      "default": "true",
      "description": "عرض/إخفاء مبدل اللغة في الشريط العلوي"
    },
    "allow_touch_move": {
      "type": "boolean",
      "label": "السماح بالسحب على الشاشات اللمسية",
      "default": true,
      "description": "قم بتفعيل هذا الخيار للسماح للمستخدمين بتحريك السلايدر بالسحب على الشاشات اللمسية."
    },
    "autoplay": {
      "type": "boolean",
      "label": "تشغيل تلقائي",
      "default": true
    },
    "grab_cursor": {
      "type": "boolean",
      "label": "تفعيل السحب بالماوس (grab cursor)",
      "default": true
    },
    "autoplay_delay": {
      "type": "number",
      "label": "تأخير التشغيل التلقائي (ms)",
      "default": 3000
    },
    "speed": {
      "type": "number",
      "label": "سرعة السلايدر (ms)",
      "default": 900
    }
  },
  "blocks": {
  "offers_announcement": {
    "name": "عرض",

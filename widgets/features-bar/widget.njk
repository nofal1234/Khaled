<!-- Features Bar Section -->
<section class="w-full py-2 sm:py-3 md:py-4 mb-6 md:mb-8 bg-black border-b border-gray-800">
    <div class="px-2.5 md:px-6 mx-2.5 md:mx-20 h-full">
        <div class="ticker" dir="rtl">
            {% set featureKeys = [
                'feature_bar_free_shipping',
                'feature_bar_eco_friendly',
                'feature_bar_high_rating',
                'feature_bar_high_quality'
            ] %}
            <div class="ticker__track gap-[8.25px] sm:gap-3 md:gap-5">
                {% for feature in widget.blocks %}
                {% set key = featureKeys[loop.index0 % featureKeys|length] %}
                <div class="ticker__item gap-[8.25px] sm:gap-2 md:gap-3 px-[8.25px] sm:px-2 md:px-4">
                    <span class="text-white text-sm sm:text-base md:text-lg lg:text-xl flex-shrink-0">{{ feature.data.icon | safe }}</span>
                    <span class="ticker__text text-white text-xs sm:text-sm md:text-xs lg:text-sm font-bold leading-tight">{{ t(key) }}</span>
                </div>
                {% endfor %}
                {% for feature in widget.blocks %}

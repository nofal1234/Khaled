<!-- Features Bar Section -->
<section class="w-full py-2 sm:py-3 md:py-4 bg-black border-b border-gray-800">
    <div class="container mx-auto h-full px-1 sm:px-2">
        <div class="ticker" dir="rtl">
            <div class="ticker__track gap-[8.25px] sm:gap-3 md:gap-5">
                {% for feature in widget.blocks %}
                <div class="ticker__item gap-[8.25px] sm:gap-2 md:gap-3 px-[8.25px] sm:px-2 md:px-4">
                    <span class="text-white text-xs sm:text-sm md:text-lg lg:text-xl flex-shrink-0">{{ feature.data.icon | safe }}</span>
                    <span class="ticker__text text-white text-[8px] sm:text-[9px] md:text-xs lg:text-sm font-bold leading-tight">{{ feature.data.title }}</span>
                </div>
                {% endfor %}
                {% for feature in widget.blocks %}
                <div class="ticker__item gap-[8.25px] sm:gap-2 md:gap-3 px-[8.25px] sm:px-2 md:px-4">
                    <span class="text-white text-xs sm:text-sm md:text-lg lg:text-xl flex-shrink-0">{{ feature.data.icon | safe }}</span>
                    <span class="ticker__text text-white text-[8px] sm:text-[9px] md:text-xs lg:text-sm font-bold leading-tight">{{ feature.data.title }}</span>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

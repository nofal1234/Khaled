<!-- Navigation Drawer (from Right) -->
{% set headerMenu = data.menu or [] %}
{% set sidebar_text_color = settings.sidebar_text_color | default('#111111') %}
{% set sidebar_font_size = settings.sidebar_font_size | default(16) %}
<div x-data="xDataSidebar({ menu: {{ headerMenu | dump }} })" x-cloak x-show="modal.open && modal.type === 'sidebar'"
  class="fixed inset-0 z-50">
  <!-- Overlay -->
  <div @click="toggleModal('sidebar')" x-show="modal.open && modal.type === 'sidebar'"
    x-transition:enter="transition-opacity ease-out duration-300" x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100" x-transition:leave="transition-opacity ease-in duration-300"
    x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
    class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

  <!-- Side Menu Panel -->
  <div class="absolute top-0 right-0 w-3/4 max-w-xs bg-white h-full shadow-2xl flex flex-col"
    x-show="modal.open && modal.type === 'sidebar'" x-transition:enter="transition ease-in-out duration-300 transform"
    x-transition:enter-start="translate-x-full" x-transition:enter-end="translate-x-0"
    x-transition:leave="transition ease-in-out duration-300 transform" x-transition:leave-start="translate-x-0"
    x-transition:leave-end="translate-x-full">

    <!-- Header (Logo + Close Button) -->
    <div class="flex items-center justify-between p-4 border-b">
      <div class="flex items-center">
        <a href="/">
          {% if globals.app.logo and globals.app.logo.fileUrl %}
          <img src="{{ globals.app.logo.fileUrl }}" alt="{{ globals.app.name | default('Logo') }}"
            class="h-8 w-auto cursor-pointer" />
          {% else %}
          <img src="{{ 'Rectangle 3.png' | assets }}" alt="Logo" class="h-8 w-auto cursor-pointer" />
          {% endif %}
        </a>
      </div>
      <button @click="toggleModal('sidebar')" class="p-2 rounded-full hover:bg-gray-100">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Menu Content -->
    <div class="flex-grow p-4 overflow-y-auto">
      <!-- Menu Items -->
      <nav class="space-y-1">
        {% if headerMenu | length > 0 %}
        {% for item in headerMenu %}
        <a href="{{ item.url | default('#') }}" @click="toggleModal('sidebar', false)"
          class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span
            style="font-family: Tajawal; font-weight: 400; font-size: {{ sidebar_font_size }}px; line-height: 150%; letter-spacing: 0%; text-align: right; color: {{ sidebar_text_color }};">{{
            item.title | default('بدون عنوان') }}</span>
        </a>
        {% endfor %}
        {% else %}
        <p class="text-gray-500 text-sm">لا توجد عناصر في القائمة.</p>
        {% endif %}
      </nav>
    </div>


    <!-- Footer (Language Selector) -->
  
    {% set currentLang = localization.language or 'en' %}

    <div class="border-t border-gray-100 p-4 bg-white">
      <div class="flex items-center justify-center">
        <span class="text-gray-500 text-sm mr-2 font-medium">{{ t("choose_language") }}</span>
        {% form 'lang' %}
        <div class="flex items-center gap-2">
          {% for lang in localization.availableLanguages %}
            <button 
              type="submit" 
              name="lang" 
              value="{{ lang }}"
              class="px-3 py-1 rounded-full text-sm font-semibold focus:outline-none transition-all
                {% if lang == currentLang %}
                  bg-[#EF9B13] text-white shadow 
                {% else %}
                  bg-gray-100 text-gray-700 hover:bg-[#EF9B13] hover:text-white
                {% endif %}
              "
              style="font-family: Tajawal;"
            >
              {{ t(lang) }}
            </button>
          {% endfor %}
        </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

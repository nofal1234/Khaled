<!-- Navigation Drawer (from Right) -->
<div x-data="xDataSidebar({ menu: {{ data.menu | dump }} })" x-cloak x-show="modal.open && modal.type === 'sidebar'" class="fixed inset-0 z-50">
  <!-- Overlay -->
  <div @click="toggleModal('sidebar')" x-show="modal.open && modal.type === 'sidebar'"
       x-transition:enter="transition-opacity ease-out duration-300"
       x-transition:enter-start="opacity-0"
       x-transition:enter-end="opacity-100"
       x-transition:leave="transition-opacity ease-in duration-300"
       x-transition:leave-start="opacity-100"
       x-transition:leave-end="opacity-0"
       class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

  <!-- Side Menu Panel -->
  <div class="absolute top-0 right-0 w-3/4 max-w-xs bg-white h-full shadow-2xl flex flex-col"
       x-show="modal.open && modal.type === 'sidebar'"
       x-transition:enter="transition ease-in-out duration-300 transform"
       x-transition:enter-start="translate-x-full"
       x-transition:enter-end="translate-x-0"
       x-transition:leave="transition ease-in-out duration-300 transform"
       x-transition:leave-start="translate-x-0"
       x-transition:leave-end="translate-x-full">
    
    <!-- Header (Logo + Close Button) -->
    <div class="flex items-center justify-between p-4 border-b">
      <div class="flex items-center">
        <a href="/">
          <img src="{{ 'Rectangle 3.png' | assets }}" alt="Logo" class="h-8 w-auto cursor-pointer" />
        </a>
      </div>
      <button @click="toggleModal('sidebar')" class="p-2 rounded-full hover:bg-gray-100">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Menu Content -->
    <div class="flex-grow p-4 overflow-y-auto">
      <!-- Home Button -->
      <a href="/" @click="toggleModal('sidebar', false)" class="block bg-gray-100 text-black text-right mb-4 hover:bg-gray-200" style="width: 229px; height: 44px; border-radius: 18px; padding: 11px 8px; font-family: Tajawal; font-weight: 700; font-size: 14px; line-height: 150%; letter-spacing: 0%; display: flex; align-items: center;">
        الرئيسية
      </a>

      <!-- Menu Items -->
      <nav class="space-y-1">
        <!-- Favorites with Badge -->
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center justify-between gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">المفضلة</span>
          <span class="bg-black text-white text-xs font-bold w-6 h-6 flex items-center justify-center rounded-full">13</span>
        </a>
        
        <!-- Static Menu Items -->
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">نسائي</span>
        </a>
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">رجالي</span>
        </a>
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">أطفال</span>
        </a>
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">موسمي</span>
        </a>
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">احدث العروض</span>
        </a>
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">افضل مبيعاً</span>
        </a>
        <a href="#" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">شوهد مؤخراً</span>
        </a>
        
        {% set items = data.menu or [] %}
        {% for item in items %}
        <a href="{{ item.url | default('#') }}" @click="toggleModal('sidebar', false)" class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
          <span class="text-gray-800" style="font-family: Tajawal; font-weight: 400; font-size: 14px; line-height: 150%; letter-spacing: 0%; text-align: right;">{{ item.title | default('بدون عنوان') }}</span>
        </a>
        {% endfor %}
      </nav>
    </div>

    <!-- Footer (Language Selector) -->
    <div class="p-4 border-t">
      <a href="#" class="flex items-center justify-between gap-3 p-3 rounded-lg hover:bg-gray-100 transition-colors">
        <span class="text-lg text-gray-800">العربية</span>
        <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </a>
    </div>

  </div>
</div>